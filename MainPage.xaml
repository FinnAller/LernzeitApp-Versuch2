<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LernzeitApp_Versuch2.MainPage"
             Shell.NavBarIsVisible="False">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="logo.png"
                HeightRequest="90"
                Aspect="AspectFit"/>
            <Label
                Text="Wilkommen zur&#10;Lise-Meitner&#10;Lernzeit-App!"
                Style="{StaticResource Headline}"/>

            <Button
                x:Name="LoginButton"
                Text="Log In" 
                Style="{StaticResource Button}"
                Clicked="OnLoginClicked"/>

            <Button
                x:Name="InfoButton"
                Text="Informationen"
                Style="{StaticResource Button}"
                Clicked="OnInfoClicked"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
